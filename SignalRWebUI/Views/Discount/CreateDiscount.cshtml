@model CreateDiscountDto
@{
   ViewData["Title"] = "CreateDiscount";
   Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <form method="post">
               <div class="card">
                  <div class="card-header">

                     @* Geri Dön Tuşu *@
                     <div style="margin-bottom: 30px">
                        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                        <a href="/Discount/Index/">
                           <i class="fa fa-chevron-left " style="font-size:18px"><span class="mx-3">Geri Dön</span> </i>
                        </a>
                     </div>





                     <div class="card-title">Günün İndirimleri İşlemleri</div>
                     <div class="card-sub">
                        Günün İndirimleri Listesi
                     </div>
                  </div>
                  <div class="card-body">

                     <div class="form-group">
                        <label for="email">Ürün Girin : </label>
                        <input type="text" class="form-control" id="email" asp-for="Title">
                     </div>
                     <div class="form-group">
                        <label for="email">İndirim oranını Girin : </label>
                        <input  type="text" class="form-control" id="email" asp-for="Amount" >
                     </div>
                     <div class="form-group">
                        <label for="email">Görseli Girin : </label>
                        <input type="text" class="form-control" id="email" asp-for="ImageUrl">
                     </div>
                     <div class="form-group">
                        <label for="email">Açıklama Girin : </label>
                        <input type="text" class="form-control" id="email" asp-for="Description">
                     </div>



                     <button class="btn btn-info w-100 fw-bold " style=" letter-spacing:5px">İndirimli Ürünü Ekle</button>
                     <br /> <br />

                  </div>
               </div>
            </form>

         </div>
      </div>
   </div>
</div>

