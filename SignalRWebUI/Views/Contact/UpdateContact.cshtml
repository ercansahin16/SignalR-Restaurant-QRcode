@model UpdateContactDto
@{
    ViewData["Title"] = "UpdateContact";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <form method="post">
               <input type="hidden" asp-for="ContactID" />
               <div class="card">
                  <div class="card-header">

                     @* Geri Dön Tuşu *@
                     <div style="margin-bottom: 30px">
                        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                        <a href="/Contact/Index/">
                           <i class="fa fa-chevron-left " style="font-size:18px"><span class="mx-3">Geri Dön</span> </i>
                        </a>
                     </div>





                     <div class="card-title">Anasayfa İletişim İşlemleri</div>
                     <div class="card-sub">
                        Tema Bütünlüğü için sadece 1 Adet satır olması gerekmektedir...
                     </div>
                  </div>
                  <div class="card-body">

                     <div class="form-group">
                        <label for="email">Locasyon Girin : </label>
                        <input type="text" class="form-control" id="email" asp-for="Location">
                     </div>
                     <div class="form-group">
                        <label for="email">Telefon Girin : </label>
                        <input rows="5" type="tel" class="form-control" id="email" asp-for="Phone" placeholder="0 *** *** ** **">
                     </div> <div class="form-group">
                        <label for="email">Mail Adresi Girin : </label>
                        <input rows="5" type="mail" class="form-control" id="email" asp-for="Mail">
                     </div>
                     <div class="form-group">
                        <label for="email">Açıklama Girin : </label>
                        <textarea type="text" class="form-control" id="email" asp-for="FooterDescription"></textarea>
                     </div>
                     <button class="btn btn-info w-100 fw-bold " style=" letter-spacing:5px"> Güncelle</button>
                     <br /> <br />

                  </div>
               </div>
            </form>

         </div>
      </div>
   </div>
</div>

