@model List<ResultProductDto>
@{
   ViewData["Title"] = "Index";
   Layout = "~/Views/AdminLayout/Index.cshtml";
   int count = 0;
 
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="card-header">
                  <div class="card-title">Ürün Listesi</div>
               </div>
               <div class="card-body">
                  <div class="card-sub">
                     Ürün ile ilgili İşlemler :
                  </div>
                  <table class="table mt-3">
                     <thead>
                        <tr>
                           <th scope="col">#</th>
                           <th scope="col">Ürün Adı</th>
                           <th scope="col">Fiyat</th>
                           <th scope="col">Kategori</th>
                           <th scope="col">Durum</th>
                           <th scope="col" class="d-flex justify-content-center">İşlemler</th>
                        </tr>
                     </thead>
                     <tbody>
                        @foreach (var item in Model)
                        {
                           count++;
                           <tr>
                              <th>@count</th>
                              <td>@item.ProductName</td>
                              <td>@item.Price.ToString("C")</td>
                              <td>@item.CategoryName</td>
                              <td>
                                 @{
                                    var Durum = item.ProductStatus == true ? "Aktif" : "Pasif";
                                 }
                                 @Durum
                              </td>
                              <td class="d-flex justify-content-center">

                                 <a href="/Product/DeleteProduct/@item.ProductID" class="btn fw-bold" title="Sil">
                                    <i class="fa fa-trash-o" style="font-size:24px"></i>
                                 </a>

                                 <a href="/Product/UpdateProduct/@item.ProductID" class="btn fw-bold" title="Düzelt">
                                    <i class="fa fa-pencil" style="font-size:24px"></i>
                                 </a>

                                 <a href="/Product/DetailsProduct/@item.ProductID" class="btn fw-bold" title="Detay">
                                    <i class="fa fa-eye" style="font-size:24px"></i>
                                 </a>

                              </td>
                           </tr>
                        }
                     </tbody>
                  </table>
                  <a href="/Product/CreateProduct/" class="btn btn-info w-100 fw-bold " style=" letter-spacing:5px">Yeni Ürün Ekle</a>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>