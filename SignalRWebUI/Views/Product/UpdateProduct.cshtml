@model SignalRWebUI.Dtos.ProductsDto.UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <form method="post">
               <div class="card">
                  <div class="card-header">

                     @* Geri Dön Tuşu *@
                     <div style="margin-bottom: 30px">
                        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                        <a href="/Product/Index/">
                           <i class="fa fa-chevron-left " style="font-size:18px"><span class="mx-3">Geri Dön</span> </i>
                        </a>
                     </div>





                     <div class="card-title">Ürün Güncelleme </div>
                  </div>
                  <input type="hidden" asp-for="ProductID" />
                  <div class="card-body">
                     <div class="form-group">
                        <label for="ProductName">Ürün Adı: </label>
                        <input type="text" class="form-control" id="productName" asp-for="ProductName">
                     </div>

                     <div class="form-group">
                        <label for="Price">Fiyat Bilgisi: </label>
                        <input type="text" class="form-control" id="price" asp-for="Price">
                     </div>



                     <div class="form-group">
                        <label for="ImageUrl">Ürün Kategorisini Seçin: </label>
                        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })

                        <div class="form-group">
                           <label for="ImageUrl">Resim URL Bilgisi: </label>
                           <input type="text" class="form-control" id="imageUrl" asp-for="ImageUrl">
                        </div>

                        <div class="form-group">
                           <label for="Description">Açıklama Bilgisi: </label>
                           <input type="text" class="form-control" id="description" asp-for="Description">
                        </div>



                        <button class="btn btn-info w-100 fw-bold " style=" letter-spacing:5px">Güncelle</button>
                        <br /> <br />

                     </div>
                  </div>
               </div>
            </form>

         </div>
      </div>
   </div>
</div>