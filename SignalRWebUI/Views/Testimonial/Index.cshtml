@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
   int count = 0;
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <div class="card">
               <div class="card-header">
                  <div class="card-title">Referans Yorum Listesi</div>
               </div>
               <div class="card-body">
                  <div class="card-sub">
                     Müşterilerin yaptığı yorumlar ile ilgili İşlemler :
                  </div>
                  <table class="table mt-3">
                     <thead>
                        <tr>
                           <th scope="col">#</th>

                           <th scope="col">Görsel</th>
                           <th scope="col">Ad Soyad</th>
                           <th scope="col">Ünvan</th>
                           <th scope="col">Yorum</th>
                           <th scope="col">Durum</th>
                           <th scope="col" class="d-flex justify-content-center">İşlemler</th>
                        </tr>
                     </thead>
                     <tbody>
                        @foreach (var item in Model)
                        {
                           count++;
                           <tr>
                              <th>@count</th>
                              <td>@item.ImageURL</td>
                              <td>@item.Name</td>
                              <td>@item.Tittle</td>
                              <td>@item.Comment</td>
                               <td>
                           @{
                           var Durum = item.TestimonialStatus == true ? "Aktif" : "Pasif";
                           }
                           @Durum
                           </td> 
                              <td class="d-flex justify-content-center">

                                 <a href="/Testimonial/DeleteTestimonial/@item.TestimonialID" class="btn fw-bold" title="Sil">
                                    <i class="fa fa-trash-o" style="font-size:24px"></i>
                                 </a>

                                 <a href="/Testimonial/UpdateTestimonial/@item.TestimonialID" class="btn fw-bold" title="Düzelt">
                                    <i class="fa fa-pencil" style="font-size:24px"></i>
                                 </a>



                              </td>
                           </tr>
                        }
                     </tbody>
                  </table>
                  <a href="/Testimonial/CreateTestimonial/" class="btn btn-info w-100 fw-bold " style=" letter-spacing:5px">Yeni Referans Bilgisi Ekle</a>
               </div>
            </div>
         </div>
      </div>
   </div>
</div>