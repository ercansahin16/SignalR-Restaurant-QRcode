@model UpdateToDoListDto
@{
   ViewData["Title"] = "UpdateToDolist";
   Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <form method="post">
               <input type="hidden" asp-for="ID" />
               <div class="card">
                  <div class="card-header">

                     @* Geri Dön Tuşu *@
                     <div style="margin-bottom: 30px">
                        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                        <a href="/ToDolist/Index/">
                           <i class="fa fa-chevron-left " style="font-size:18px"><span class="mx-3">Geri Dön</span> </i>
                        </a>
                     </div>





                     <div class="card-title">Görev Ekleme Sayfası</div>
                  </div>
                  <div class="card-body">
                     <div class="form-group">
                        <label for="email">Görev Başlığı : </label>
                        <input type="text" class="form-control" id="email" asp-for="Title">
                     </div>
                     <div class="form-group">
                        <label for="email">Görev Açıklaması : </label>
                        <input type="text" class="form-control" id="email" asp-for="Description">
                     </div>
                     <button class="btn btn-info w-100 fw-bold " style=" letter-spacing:5px"> Görevi Güncelle</button>
                     <br /> <br />

                  </div>
               </div>
            </form>

         </div>
      </div>
   </div>
</div>


