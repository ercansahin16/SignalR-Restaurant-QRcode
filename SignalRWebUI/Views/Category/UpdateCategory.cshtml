@model SignalRWebUI.Dtos.CategoryDto.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <form method="post">
               <div class="card">
                  <div class="card-header">
                     @* Geri Dön Tuşu *@
                     <div style="margin-bottom: 30px">
                        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                        <a href="/Category/Index/">
                           <i class="fa fa-chevron-left " style="font-size:18px"><span class="mx-3">Geri Dön</span> </i>
                        </a>
                     </div>
                     @* İcerik *@
                     <div class="card-title">Kategori Güncelleme</div>
                  </div>
                  <div class="card-body">
                     <input type="hidden" asp-for="CategoryID"/>
                     <div class="form-group">
                        <label for="email">Kategori Adını Giriniz: </label>
                        <input type="text" class="form-control" id="email" asp-for="CategoryName">
                     </div>
                     <button class="btn btn-info w-100 fw-bold " style=" letter-spacing:5px">Kategori Güncelle</button>
                  </div>
               </div>
            </form>
         </div>
      </div>
   </div>
</div>