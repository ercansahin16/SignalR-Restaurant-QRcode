@model UpdateBookingDto
@{
   ViewData["Title"] = "UpdateBooking";
   Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
   <div class="container-fluid">
      <div class="row">
         <div class="col-md-12">
            <form method="post">
               <div class="card">
                  <div class="card-header">

                     @* Geri Dön Tuşu *@
                     <div style="margin-bottom: 30px">
                        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
                        <a href="/Booking/Index/">
                           <i class="fa fa-chevron-left " style="font-size:18px"><span class="mx-3">Geri Dön</span> </i>
                        </a>
                     </div>




                     <input type="hidden" asp-for="BookingID" />
                     <div class="card-title"> Rezerve Güncelleme</div>
                  </div>
                  <div class="card-body">
                     <div class="form-group">
                        <label for="email">Ad Soyad Giriniz: </label>
                        <input type="text" class="form-control" id="email" asp-for="Name">
                     </div>
                     <div class="form-group">
                        <label for="email">Telefon Giriniz: </label>
                        <input type="tel" class="form-control" id="email" asp-for="Phone" placeholder="0 *** *** ** **">
                     </div>
                     <div class="form-group">
                        <label for="email">Mail Adresi Giriniz: </label>
                        <input type="email" class="form-control" id="email" asp-for="Mail">
                     </div>
                     <div class="form-group">
                        <label for="email">Kişi Sayısı Giriniz: </label>
                        <input type="text" class="form-control" id="email" asp-for="PersonCount">
                     </div>
                     <div class="form-group">
                        <label for="email">Rezervasyon Tarihi Giriniz: </label>
                        <input type="date" class="form-control" id="email" asp-for="Date">
                     </div>

                     <button class="btn btn-info w-100 fw-bold " style=" letter-spacing:5px">Güncelle</button>
                     <br /> <br />

                  </div>
               </div>
            </form>

         </div>
      </div>
   </div>
</div>
